<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activityMainImageVIew"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="40dp" />

    <ImageView
        android:id="@+id/activityMainImageVIew"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew1"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/activityMainImageVIew2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/activityMainImageVIew4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew3"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/activityMainImageVIew6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew5"
        app:srcCompat="@android:color/background_light"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/activityMainImageVIew3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew2"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/activityMainImageVIew5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew4"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/activityMainImageVIew1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/activityMainPlayNextRound"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:text="@string/activityMainPlayNextRound"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activityMainHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="@string/activityMainHeader"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activityMainHeader3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="@string/activityMainCurrentBalance"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activityMainImageVIew" />

    <TextView
        android:id="@+id/activityMainHeader4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="@string/activityMainCurrentPower"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activityMainImageVIew2" />

    <TextView
        android:id="@+id/activityMainCurrentBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="Balance $"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/activityMainCurrentPower"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew1" />

    <TextView
        android:id="@+id/activityMainCurrentPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="1000/1000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/activityMainHeader3"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew" />

    <TextView
        android:id="@+id/activityMainHeader5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="@string/activityMainCurrentNextMatch"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activityMainImageVIew3" />

    <TextView
        android:id="@+id/activityMainNextMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="Next Match"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/activityMainImageVIew4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/activityMainImageVIew4"
        app:layout_constraintTop_toTopOf="@+id/activityMainImageVIew4" />

    <TextView
        android:id="@+id/activityMainHeader7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="@string/activityMainCurrentLastMatch"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activityMainImageVIew5" />

    <TextView
        android:id="@+id/activityMainLastMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="Last Match"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/activityMainImageVIew6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/activityMainImageVIew6"
        app:layout_constraintTop_toTopOf="@+id/activityMainImageVIew6" />

    <ListView
        android:layout_width="395dp"
        android:layout_height="363dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/activityMainPlayNextRound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityMainImageVIew6" />

</android.support.constraint.ConstraintLayout>