<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Jan"
    android:textSize="14sp">

    <TextView
        android:id="@+id/listViewScoreTablePosition"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="1."
        android:textSize="15dp" />

    <TextView
        android:id="@+id/listViewScoreTableClubName"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:text="Name"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/listViewScoreTableMatches"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="20"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/listViewScoreTablePoints"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="100"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/listViewScoreTableScoredGoals"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:gravity="right|center_vertical"
        android:text="50"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/listViewScoreTableSpace"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="-"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/listViewScoreTableLostGoals"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="10"
        android:textSize="15dp" />



</LinearLayout>